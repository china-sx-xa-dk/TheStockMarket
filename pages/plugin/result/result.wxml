<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">计算结果</view>
</cu-custom>
<form>
	<view class="cu-form-group">
		<view class="title">第一股</view>
		<input value="{{firCode}}" style="color:black;font-size:36rpx" disabled="disabled"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">第二股</view>
		<input value="{{secCode}}" style="color:black;font-size:36rpx" disabled="disabled"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">时间段</view>
		<input value="{{timeStemp}}" style="color:black;font-size:36rpx" disabled="disabled"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">相关性</view>
		<input value="{{caluateResult}}" style="color:red;font-size:48rpx" disabled="disabled"></input>
	</view>
  <view class="cu-form-group">
		<image src="{{imgData}}"></image>
	</view>
  <view class="padding flex flex-direction">
    <button bindtap="saveImage" class="cu-btn bg-red margin-tb-sm lg" style="width:100%;">点击保存结果曲线图</button>
  </view>
</form>
